{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row w-25">
            <div class="col">
                <h1>Register</h1>
                {{ form_start(registrationForm) }}
                <fieldset>
                    <legend class="mb-3f">My Identity</legend>
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>
                
                <fieldset class="mb-3">
                    <legend>My Coordinate</legend>
                    {{ form_row(registrationForm.address) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.city) }}
                </fieldset>
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn btn-primary btn-lg my-3">Register</button>
                <a class="btn btn-secondary" href="{{path('app_login')}}">Login</a>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
    
{% endblock %}
